<%- layout('./layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <p>Total campgrounds: <%= total %>
    </p>
    <% for (let c of campgrounds){ %>
        <div class="card" id="card">
            <div class="row">
                <div class="col-md-3">
                    <img src="<%= c.image %>" alt="campground image" class="img-fluid" id="camp-image">
                </div>
                <div class="col-md-8">
                    <div class="card-body" id="card-body">
                        <h5 class="card-title"><%= c.title %></h5>
                        <p class="card-text"><%= c.description %></p>
                        <small class="text-muted"><%= c.location %></small>
                        <a href="/campgrounds/<%= c._id %>" class="btn btn-primary btn-sm">View</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>